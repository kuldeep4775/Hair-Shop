<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".More">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navibar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/rounded"
        app:itemIconTint="@color/color"
        app:menu="@menu/menu"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:background="#fff"
        android:textColor="#FFBC1A"
        android:shadowColor="@color/cardview_light_background"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:layout_marginTop="5mm"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="Logout" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="13mm"
        android:layout_weight="1"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Pic"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="30mm"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="4mm"/>



    <TextView
        android:id="@+id/fname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="40mm"
        android:text="First Name"
        android:textSize="4mm"
        android:textColor="@color/design_default_color_primary_dark"/>

    <TextView
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="50mm"
        android:layout_weight="1"
        android:text="First Name"
        android:textSize="3mm"/>



    <TextView
        android:id="@+id/fname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="60mm"
        android:text="Email Address"
        android:textSize="4mm"
        android:textColor="@color/design_default_color_primary_dark"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="70mm"
        android:text="Email Address"
        android:textSize="3mm"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55mm"
        android:layout_marginTop="15mm"
        app:srcCompat="?attr/actionModePasteDrawable" />


</RelativeLayout>